@using Business.Helpers
@model LoginLogFilterViewModel

@{
    ViewData["Title"] = "Login Log Report";
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-image: url('/img/df.jpg');
            background-repeat: repeat;
            background-size: auto;
            font-family: Arial, sans-serif;
        }

        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }

        .glass-box {
            background-color: rgba(255, 255, 255, 0.65);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(6px);
        }

        .custom-select-wrapper {
            position: relative;
            width: 100%;
        }

            .custom-select-wrapper select {
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
                border-radius: 8px;
            }

            .custom-select-wrapper .select-icon {
                position: absolute;
                top: 50%;
                right: 14px;
                transform: translateY(-50%);
                pointer-events: none;
                font-size: 1.2rem;
                color: #6c63ff;
                transition: transform 0.2s ease-in-out;
            }

            .custom-select-wrapper select:focus + .select-icon {
                transform: translateY(-50%) rotate(180deg);
                color: #4a47a3;
                ,,
            }

            .custom-select-wrapper select {
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
                padding-right: 2.5rem;
                border-radius: 8px;
                font-size: 14px;
            }

                .custom-select-wrapper select:focus {
                    border-color: #86b7fe;
                    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
                }

        /* Admin */
        #role.admin-selected:focus {
            border-color: #ff4d4d;
            box-shadow: 0 0 0 0.25rem rgba(255, 77, 77, 0.25);
        }

        /* Brand Manager */
        #role.brand-selected:focus {
            border-color: #ffae42;
            box-shadow: 0 0 0 0.25rem rgba(255, 174, 66, 0.25);
        }

        /* Content Editor */
        #role.editor-selected:focus {
            border-color: #4caf50;
            box-shadow: 0 0 0 0.25rem rgba(76, 175, 80, 0.25);
        }

        /* User */
        #role.user-selected:focus {
            border-color: #2196f3;
            box-shadow: 0 0 0 0.25rem rgba(33, 150, 243, 0.25);
        }

        .badge-admin {
            background-color: #dc3545;
        }

        .badge-brand {
            background-color: #ffc107;
            color: #212529;
        }

        .badge-editor {
            background-color: #28a745;
        }

        .badge-user {
            background-color: #0d6efd;
        }

        #role .all-option {
            color: #4a8cff !important;
            background-color: #f0f4ff !important;
            font-weight: 550;
        }


            #role .all-option:hover {
                background-color: #e0ecff !important;
            }


        #SortBy.form-select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons/sort-alpha-down.svg");
            background-repeat: no-repeat;
            background-position: right 0.8rem center;
            background-size: 18px 18px;
            padding-right: 2.5rem;
        }

            #SortBy.form-select:focus {
                background-image: url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/icons/sort-alpha-up.svg");
            }
    </style>
</head>
<body>

    @{
        var currentLanguage = Context.Session.GetString("Language") ?? "tr";
    }

    <div class="d-flex justify-content-end mb-3">
        <div class="dropdown">
            <!-- Shows chosen button -->
            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                @if (currentLanguage == "tr")
                {
                    <img src="/img/turkish_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        Türkçe
                    </div>
                }
                else if (currentLanguage == "en")
                {
                    <img src="/img/usa_eng_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        English
                    </div>
                }
                else if (currentLanguage == "de")
                {
                    <img src="/img/german_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        Deutsch
                    </div>
                }
            </button>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                <!-- Türkçe -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="tr" class="dropdown-item d-flex align-items-center">
                            <img src="/img/turkish_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            Türkçe
                        </button>
                    </form>
                </li>
                <!-- English -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="en" class="dropdown-item d-flex align-items-center">
                            <img src="/img//usa_eng_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            English
                        </button>
                    </form>
                </li>
                <!-- Deutsch -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="de" class="dropdown-item d-flex align-items-center">
                            <img src="/img/german_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            Deutsch
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>


    <div class="wrapper">
        <div class="container content mt-5">
            <div class="glass-box">
                <h2 class="mb-3 text-center">@LocalizationCache.Get("Login Log Report")</h2>
                <hr />

                <form method="post" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-6 col-lg-3">
                            <label for="UserName" class="form-label">@LocalizationCache.Get("Username")</label>
                            <input type="text" class="form-control" name="UserName" value="@Model.UserName" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="IPAddress" class="form-label">@LocalizationCache.Get("IP Address")</label>
                            <input type="text" class="form-control" name="IPAddress" value="@Model.IPAddress" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="StartDate" class="form-label">@LocalizationCache.Get("Start Date")</label>
                            <input type="date" class="form-control" name="StartDate" value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="EndDate" class="form-label">@LocalizationCache.Get("End Date")</label>
                            <input type="date" class="form-control" name="EndDate" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="BrowserInfo" class="form-label">@LocalizationCache.Get("Browser")</label>
                            <input type="text" class="form-control" name="BrowserInfo" value="@Model.BrowserInfo" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="role" class="form-label">@LocalizationCache.Get("Role")</label>
                            <select asp-for="Role" id="role" class="form-select">
                                <option value="" class="all-option">@LocalizationCache.Get("All")</option>
                                <option value="Admin">Admin</option>
                                <option value="Brand Manager">Brand Manager</option>
                                <option value="Content Editor">Content Editor</option>
                                <option value="User">User</option>
                            </select>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="SortBy" class="form-label">@LocalizationCache.Get("SortBy")</label>
                            <select asp-for="SortBy" class="form-select" id="SortBy">
                                <option value="" class="all-option2">@LocalizationCache.Get("All")</option>
                                <option value="DateDesc">@LocalizationCache.Get("DateDesc")</option>
                                <option value="DateAsc">@LocalizationCache.Get("DateAsc")</option>
                                <option value="UsernameAsc">@LocalizationCache.Get("UsernameAsc")</option>
                                <option value="UsernameDesc">@LocalizationCache.Get("UsernameDesc")</option>
                                <option value="RoleAsc">@LocalizationCache.Get("RoleAsc")</option>
                                <option value="RoleDesc">@LocalizationCache.Get("RoleDesc")</option>
                            </select>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="StartTime" class="form-label">@LocalizationCache.Get("Start Time")</label>
                            <input type="time" class="form-control" name="StartTime" value="@(Model.StartTime?.ToString(@"hh\:mm") ?? "")" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="EndTime" class="form-label">@LocalizationCache.Get("End Time")</label>
                            <input type="time" class="form-control" name="EndTime" value="@(Model.EndTime?.ToString(@"hh\:mm") ?? "")" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label class="form-label d-block">@LocalizationCache.Get("Login Status")</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsSuccess" value="" @(Model.IsSuccess == null ? "checked" : "") />
                                <label class="form-check-label">@LocalizationCache.Get("All")</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsSuccess" value="true" @(Model.IsSuccess == true ? "checked" : "") />
                                <label class="form-check-label">@LocalizationCache.Get("Successful")</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsSuccess" value="false" @(Model.IsSuccess == false ? "checked" : "") />
                                <label class="form-check-label">@LocalizationCache.Get("Failed")</label>
                            </div>
                        </div>

                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-funnel-fill me-1"></i> @LocalizationCache.Get("Filter")
                        </button>

                    </div>
                </form>

                @if (Model.Results != null && Model.Results.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>@LocalizationCache.Get("Username")</th>
                                    <th>@LocalizationCache.Get("IP Address")</th>
                                    <th>@LocalizationCache.Get("Login Date")</th>
                                    <th>@LocalizationCache.Get("Login Time")</th>
                                    <th>@LocalizationCache.Get("Browser")</th>
                                    <th>@LocalizationCache.Get("Role")</th>
                                    <th>@LocalizationCache.Get("Login Status")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.Results)
                                {
                                    <tr class="@(log.IsSuccess == true ? "table-success" : "table-danger")">
                                        <td>@log.UserName</td>
                                        <td>@log.IPAddress</td>
                                        <td>@log.LoginDate.ToString("yyyy/MM/dd")</td>
                                        <td>@log.LoginDate.ToString("HH:mm")</td>
                                        <td>@log.BrowserInfo</td>
                                        <td>
                                            @if (log.Role == "Admin")
                                            {
                                                <span class="badge badge-admin">Admin</span>
                                            }
                                            else if (log.Role == "Brand Manager")
                                            {
                                                <span class="badge badge-brand">Brand Manager</span>
                                            }
                                            else if (log.Role == "Content Editor")
                                            {
                                                <span class="badge badge-editor">Content Editor</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-user">User</span>
                                            }
                                        </td>
                                        <td>
                                            @if (log.IsSuccess == true)
                                            {
                                                <span class="fw-bold text-success bg-white px-2 py-1 rounded">@LocalizationCache.Get("Successful")</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-danger bg-white px-2 py-1 rounded">@LocalizationCache.Get("Failed")</span>
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-3">
                        @Html.Raw(LocalizationCache.Get("No Record Has Found!"))
                    </div>
                }
            </div>
        </div>
    </div>

    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        // Language switch
        $('#languageDropdown').change(function () {
            var selectedLanguage = $(this).val();

            $.ajax({
                url: '@Url.Action("ChangeLanguage", "Login")',
                type: 'POST',
                data: { language: selectedLanguage },
                success: function () {
                    location.reload();
                },
                error: function () {
                    alert("@Html.Raw(LocalizationCache.Get("Language change failed."))");
                }
            });
        });

        // Role dropdown
        $(document).ready(function () {
            $('#role').select2({
                placeholder: "@LocalizationCache.Get("Seçiniz")",
                allowClear: true,
                width: '100%'
            });
        });
        $('#role').on('change', function () {
            var selected = $(this).val();
            $(this).removeClass('all-selected admin-selected brand-selected editor-selected user-selected');

            if (selected === "") {
                $(this).addClass('all-selected');
            }
            else if (selected === "Admin") {
                $(this).addClass('admin-selected');
            }
            else if (selected === "Brand Manager") {
                $(this).addClass('brand-selected');
            }
            else if (selected === "Content Editor") {
                $(this).addClass('editor-selected');
            }
            else if (selected === "User") {
                $(this).addClass('user-selected');
            }
        });


        // SortBy dropdown
        $(document).ready(function () {
            $('#SortBy').select2({
                placeholder: "@LocalizationCache.Get("Seçiniz")",
                allowClear: true,
                width: '100%'
            });

            var currentSort = "@Model.SortBy";
            if (currentSort) {
                $('#SortBy').val(currentSort).trigger('change');
            }
        });
        $('#SortBy').on('change', function () {
            var selected = $(this).val();
            $(this).removeClass('all-selected date-selected username-selected role-selected');

            if (selected === "") {
                $(this).addClass('all-selected');
            }
            else if (selected === "DateAsc" || selected === "DateDesc") {
                $(this).addClass('date-selected');
            }
            else if (selected === "UsernameAsc" || selected === "UsernameDesc") {
                $(this).addClass('username-selected');
            }
            else if (selected === "RoleAsc" || selected === "RoleDesc") {
                $(this).addClass('role-selected');
            }
        });

    </script>
</body>
</html>
