@model LoginLogFilterViewModel

@{
    ViewData["Title"] = "Login Log Report";
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-image: url('/img/df.jpg');
            background-repeat: repeat;
            background-size: auto;
          /*   background-position: 0px 15px; */
            font-family: Arial, sans-serif;
        }

        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }

        .glass-box {
            background-color: rgba(255, 255, 255, 0.65); 
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(6px);
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="container content mt-5">
            <div class="glass-box">
                <h2 class="mb-3 text-center">Login Log Report</h2>
                <hr />

                <form method="post" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-4 col-lg-3">
                            <label for="UserName" class="form-label">Username</label>
                            <input type="text" class="form-control" name="UserName" value="@Model.UserName" />
                        </div>
                        <div class="col-md-4 col-lg-3">
                            <label for="IPAddress" class="form-label">IP Address</label>
                            <input type="text" class="form-control" name="IPAddress" value="@Model.IPAddress" />
                        </div>
                        <div class="col-md-4 col-lg-3">
                            <label for="StartDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="StartDate" value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-md-4 col-lg-3">
                            <label for="EndDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" name="EndDate" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="BrowserInfo" class="form-label">Browser</label>
                            <input type="text" class="form-control" name="BrowserInfo" value="@Model.BrowserInfo" />
                        </div>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary px-4">Filter</button>
                    </div>
                </form>

                @if (Model.Results != null && Model.Results.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>Username</th>
                                    <th>IP Address</th>
                                    <th>Login Date</th>
                                    <th>Browser</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.Results)
                                {
                                    <tr>
                                        <td>@log.UserName</td>
                                        <td>@log.IPAddress</td>
                                        <td>@log.LoginDate.ToString("yyyy/MM/dd HH:mm")</td>
                                        <td>@log.BrowserInfo</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-3">
                        No Record Has Found!
                    </div>
                }
            </div>
        </div>

        <footer>
            &copy; @DateTime.Now.Year - Login Log Report System
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
