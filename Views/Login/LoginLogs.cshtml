@using Business.Helpers
@model LoginLogFilterViewModel

@{
    ViewData["Title"] = "Login Log Report";
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-image: url('/img/df.jpg');
            background-repeat: repeat;
            background-size: auto;
            font-family: Arial, sans-serif;
        }

        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }

        .glass-box {
            background-color: rgba(255, 255, 255, 0.65);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(6px);
        }

    </style>
</head>
<body>

    @{
        var currentLanguage = Context.Session.GetString("Language") ?? "tr";
    }

    <div class="d-flex justify-content-end mb-3">
        <div class="dropdown">
            <!-- Shows chosen button -->
            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                @if (currentLanguage == "tr")
                {
                    <img src="/img/turkish_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        Türkçe
                    </div>
                }
                else if (currentLanguage == "en")
                {
                    <img src="/img/usa_eng_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        English
                    </div>
                }
                else if (currentLanguage == "de")
                {
                    <img src="/img/german_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        Deutsch
                    </div>
                }
            </button>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                <!-- Türkçe -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="tr" class="dropdown-item d-flex align-items-center">
                            <img src="/img/turkish_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            Türkçe
                        </button>
                    </form>
                </li>
                <!-- English -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="en" class="dropdown-item d-flex align-items-center">
                            <img src="/img//usa_eng_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            English
                        </button>
                    </form>
                </li>
                <!-- Deutsch -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="de" class="dropdown-item d-flex align-items-center">
                            <img src="/img/german_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            Deutsch
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>


    <div class="wrapper">
        <div class="container content mt-5">
            <div class="glass-box">
                <h2 class="mb-3 text-center">@LocalizationCache.Get("Login Log Report")</h2>
                <hr />

                <form method="post" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-4 col-lg-3">
                            <label for="UserName" class="form-label">@LocalizationCache.Get("Username")</label>
                            <input type="text" class="form-control" name="UserName" value="@Model.UserName" />
                        </div>
                        <div class="col-md-4 col-lg-3">
                            <label for="IPAddress" class="form-label">@LocalizationCache.Get("IP Address")</label>
                            <input type="text" class="form-control" name="IPAddress" value="@Model.IPAddress" />
                        </div>
                        <div class="col-md-4 col-lg-3">
                            <label for="StartDate" class="form-label">@LocalizationCache.Get("Start Date")</label>
                            <input type="date" class="form-control" name="StartDate" value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-md-4 col-lg-3">
                            <label for="EndDate" class="form-label">@LocalizationCache.Get("End Date")</label>
                            <input type="date" class="form-control" name="EndDate" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label for="BrowserInfo" class="form-label">@LocalizationCache.Get("Browser")</label>
                            <input type="text" class="form-control" name="BrowserInfo" value="@Model.BrowserInfo" />
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <label class="form-label d-block">@LocalizationCache.Get("Login Status")</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsSuccess" value="" @(Model.IsSuccess == null ? "checked" : "") />
                                <label class="form-check-label">@LocalizationCache.Get("All")</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsSuccess" value="true" @(Model.IsSuccess == true ? "checked" : "") />
                                <label class="form-check-label">@LocalizationCache.Get("Successful")</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsSuccess" value="false" @(Model.IsSuccess == false ? "checked" : "") />
                                <label class="form-check-label">@LocalizationCache.Get("Failed")</label>
                            </div>
                        </div>

                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-funnel-fill me-1"></i> @LocalizationCache.Get("Filter")
                        </button>

                    </div>
                </form>

                @if (Model.Results != null && Model.Results.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>@LocalizationCache.Get("Username")</th>
                                    <th>@LocalizationCache.Get("IP Address")</th>
                                    <th>@LocalizationCache.Get("Login Date")</th>
                                    <th>@LocalizationCache.Get("Browser")</th>
                                    <th>@LocalizationCache.Get("Login Status")</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.Results)
                                {
                                    <tr class="@(log.IsSuccess == true ? "table-success" : "table-danger")">
                                        <td>@log.UserName</td>
                                        <td>@log.IPAddress</td>
                                        <td>@log.LoginDate.ToString("yyyy/MM/dd HH:mm")</td>
                                        <td>@log.BrowserInfo</td>
                                        <td>
                                            @if (log.IsSuccess == true)
                                            {
                                                <span class="fw-bold text-success bg-white px-2 py-1 rounded">@LocalizationCache.Get("Successful")</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-danger bg-white px-2 py-1 rounded">@LocalizationCache.Get("Failed")</span>
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-3">
                       @Html.Raw(LocalizationCache.Get("No Record Has Found!"))
                    </div>
                }
            </div>
        </div>
    </div>

    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        // Language switch
        $('#languageDropdown').change(function () {
            var selectedLanguage = $(this).val();

            $.ajax({
                url: '@Url.Action("ChangeLanguage", "Login")',
                type: 'POST',
                data: { language: selectedLanguage },
                success: function () {
                    location.reload();
                },
                error: function () {
                    alert("@Html.Raw(LocalizationCache.Get("Language change failed."))"); 
                }
            });
        });
    </script>
</body>
</html>
