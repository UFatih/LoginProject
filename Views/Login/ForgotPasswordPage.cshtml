@using Business.Helpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@LocalizationCache.Get("Forgot Password")</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            background-image: url('/img/ForgotPAss.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            padding-bottom: 70px;
        }

        .forgot-container {
            flex: 1;
            background-color: whitesmoke;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0px 4px 20px rgba(0,0,0,0.2);
            max-width: 480px;
            margin: auto;
            margin-top: 100px;
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .info-text {
            font-size: 14px;
            color: #6c757d;
            text-align: center;
            margin-bottom: 15px;
        }

        #errorMessage, #successMessage {
            display: none;
            padding: 10px 12px;
            border-radius: 6px;
            font-size: 14px;
            text-align: center;
            margin-top: 15px;
        }

        #errorMessage {
            background-color: #ffe6e6;
            color: #b30000;
            border: 1px solid #ffcccc;
        }

        #successMessage {
            background-color: #e6ffe6;
            color: #006600;
            border: 1px solid #b3ffb3;
        }

        .top-right-widgets {
            position: absolute;
            top: 30px;
            right: 30px;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 12px;
            z-index: 999;
        }


        .back-login {
            display: inline-block;
            margin-top: 15px;
            font-size: 14px;
            color: #6c757d;
            text-decoration: none;
        }

            .back-login:hover {
                text-decoration: underline;
                color: #0d6efd;
            }

    </style>
</head>
<body>


    @{
        var currentLanguage = Context.Session.GetString("Language") ?? "tr";
    }
    <div class="top-right-widgets">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                @if (currentLanguage == "tr")
                {
                    <img src="/img/turkish_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        Türkçe
                    </div>
                }
                else if (currentLanguage == "en")
                {
                    <img src="/img/usa_eng_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        English
                    </div>
                }
                else if (currentLanguage == "de")
                {
                    <img src="/img/german_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                    <div>
                        Deutsch
                    </div>
                }
            </button>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                <!-- Türkçe -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="tr" class="dropdown-item d-flex align-items-center">
                            <img src="/img/turkish_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            Türkçe
                        </button>
                    </form>
                </li>
                <!-- English -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="en" class="dropdown-item d-flex align-items-center">
                            <img src="/img//usa_eng_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            English
                        </button>
                    </form>
                </li>
                <!-- Deutsch -->
                <li>
                    <form method="post" asp-controller="Login" asp-action="ChangeLanguage">
                        <button type="submit" name="language" value="de" class="dropdown-item d-flex align-items-center">
                            <img src="/img/german_flag.jpg" style="width:30px; height:20px; margin-right:5px;" />
                            Deutsch
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>



    <!-- Form -->
    <div class="container forgot-container">
        <h3>
            <i class="bi bi-envelope-fill fs-3 text-dark mb-2"></i>
            @LocalizationCache.Get("Forgot Password")
        </h3>
        <p class="info-text">@LocalizationCache.Get("Enter your email address and we’ll send you a reset link.")</p>

        <div class="form-group">
            <label for="resetEmail">@LocalizationCache.Get("Email Address")</label>
            <input type="email" class="form-control" id="resetEmail" placeholder="@LocalizationCache.Get("EnterEmailPlaceHolder")" />
        </div>

        <div id="successMessage">
            <i class="bi bi-check-circle-fill"></i> @LocalizationCache.Get("Password reset link has been sent to your email!")
        </div>
        <div id="errorMessage">
            <i class="bi bi-exclamation-circle-fill"></i> @LocalizationCache.Get("Failed to send mail.")
        </div>

        <button type="button" class="btn btn-primary w-100 mt-3" id="sendResetLink">
            @LocalizationCache.Get("Send Reset Link")
        </button>

        <a href="/Login/Loginn" class="back-login">← @LocalizationCache.Get("Back to Login")</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        
        //Reset Link
        $(document).ready(function () {
            $("#sendResetLink").click(function () {
                var email = $("#resetEmail").val(); 
                $.ajax({
                    url: "@Url.Action("ForgotPasswordLinkByEmail", "Mail")",
                    type: "POST",
                    data: { email: email },
                    success: function (resp) {
                        if (resp.success) {
                            $("#successMessage").show();
                            $("#errorMessage").hide();
                        } else {
                            $("#errorMessage").text(resp.message || "@LocalizationCache.Get("Error")").show();
                            $("#successMessage").hide();
                        }
                    },
                    error: function () {
                        $("#errorMessage").show();
                        $("#successMessage").hide();
                    }
                });
            });
        });

        // Language switch
        $('#languageDropdown').change(function () {
            var selectedLanguage = $(this).val();
            $.ajax({
                url: '@Url.Action("ChangeLanguage", "Login")',
                type: 'POST',
                data: { language: selectedLanguage },
                success: function () {
                    location.reload();
                },
                error: function () {
                    alert("@Html.Raw(LocalizationCache.Get("Language change failed."))");
                }
            });
        });

    </script>
</body>
</html>
