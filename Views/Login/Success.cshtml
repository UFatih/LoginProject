@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User Informations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-image: url('/img/bg7.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .login {
            flex: 1;
            background-color: whitesmoke;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
            max-width: 1000px;
            margin: auto;
            margin-top: 100px;
        }

        h3 {
            text-align: center;
            margin-bottom: 30px;
        }

        footer {
            background-color: floralwhite !important;
            text-align: start;
            padding: 20px;
            padding-left: 20px; 
        }

        .btn-info {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <h2 class="text-center mt-4">Login Successfully 🎉🎉</h2>

    @model List<Entities.BaseUser>

    <div class="login">
        <h3>User Informations</h3>

        <a href="@Url.Action("Profile", "Login")" class="btn btn-info">+Add User</a>

        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Username</th>
                    <th>Job</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.email</td>
                        <td>@user.password</td>
                        <td>@user.username</td>
                        <td>@user.job</td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Profile", "Login", new { Id = user.Id })">Edit</a>
                            <button type="button" class="btn btn-danger delete-btn" data-userid="@user.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        © 2025 - LoginProject - <a href="#">Privacy</a>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Delete
        $(".delete-btn").click(function () {
            var Id = $(this).data("userid");

            $.ajax({
                url: "@Url.Action("Success", "Login")",
                type: "post",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(Id),
                success: function () {
                    alert("The user has been deleted.");
                    location.reload();
                },
                error: function (xhr, status, error) {
                    alert("Unexpected error occurred.");
                    console.log(error);
                }
            });
        });
    </script>
</body>
</html>
