        //Add Roles
        $(document).on("click", "Roleadd", function () {


            $.ajax({
                url: "@Url.Action("Roles", "Login")",
                type: "Post",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(),
                success: function (add) {
                    window.location.href = "/Login/AddRoles";
                },
                error: function (xhr, status, error) {
                    alert("Unexpected result has occured.");
                    console.log(error);
                }
            });
        });

    </script>
</body>
</html>
